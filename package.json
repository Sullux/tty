{
  "name": "tty",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:Sullux/tty.git",
  "author": "Charles Sullivan <sullux@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest --verbose --passWithNoTests",
    "integration": "yarn start -- --test",
    "lint": "yarn standardx",
    "fix": "yarn standardx --fix",
    "build": "(rm -rf dist || 0) && mkdir dist && rollup -c rollup.js && cp *.md dist/ && node ./scripts/package.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "jest": "^29.7.0",
    "rollup": "^4.18.1",
    "standardx": "^7.0.0"
  },
  "eslintConfig": {
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "env": {
      "es6": true
    }
  },
  "standardx": {
    "env": [
      "jest",
      "node"
    ],
    "globals": [
      "byte",
      "isNumber",
      "isString"
    ]
  }
}
